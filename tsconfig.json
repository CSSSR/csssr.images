{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "dom",
      "es6",
      "dom.iterable",
      "scripthost",
      "es2019"
    ],
    "jsx": "react",
    "strict": true,
    "types": [
      "node",
      "webpack-env",
      "jest"
    ],
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "webpack": ["./node_modules/@types/webpack/index.d.ts"],
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "node_modules"
  ]
}
